@model AssetTrackingSystem.Models.Models.ViewModel.BranchCreateVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

        @using (Html.BeginForm("Create", "Branch", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            
            <h2>Organization Branch Setup</h2>
            <p>
          @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
            </p>
            <div class="form-group">
                <label for="country" class="col-sm-4 control-label">Organization</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.Branch.OrganizationId, new SelectList(Model.Organizations, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Branch.OrganizationId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Branch.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Branch.Name, new { @placeholder = "Branch Name", @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Branch.Name, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Branch.ShortName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Branch.ShortName, new { @placeholder = "Short Name", @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Branch.ShortName, null, new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
                @Html.ActionLink("Back to List", "Index")
        }
    
</div>





