@model AssetTrackingSystem.Models.Models.Branch
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Container">
         @using (Html.BeginForm("Edit", "Branch", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
         { 
         <h2>Organization Branch Edit</h2>
                @Html.HiddenFor(m=>m.OrganizationId)
                @Html.HiddenFor(m=>m.Id)
           <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder = "Branch Name", @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
            </div>
             
               <div class="form-group">
                @Html.LabelFor(m => m.ShortName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.ShortName, new { @placeholder = "Short Name", @class = "form-control", autofocus = true })
                </div>
            </div>
             <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>  
              @Html.ActionLink("Back To List","Index")
         }
<div class="form_my_style">
    <div class="alert alert-success">
        @if (ViewBag.Message != null)
        {
            <strong>@ViewBag.Message</strong>
        }

    </div>
</div>
</div>