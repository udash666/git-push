@model  IEnumerable<AssetTrackingSystem.Models.Models.Branch>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="table">
<p>
    <hr />
    <h4>Organization Branch</h4>
    <hr />
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "Branch", FormMethod.Post))
    {
    <p>
        Branch Name: @Html.TextBox("name")
        Short Name :  @Html.TextBox("shortname")
        <input type="submit" value="Search" />
    </p>
    }
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            
            <th></th>
        </tr>

        @foreach (var item in Model)
            
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=> item.Organization.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=> item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=> item.ShortName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }

    </table>
    </div>

