@model  IEnumerable<Asset_Tracking_System.Models.AssetEntry>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="table">
    <div class="from_my_style">

        @using (Html.BeginForm("Index", "AssetEntry", FormMethod.Post, new { @class = "form-horizaontal" }))
        {
            <h2>Asset Purchase Entry</h2>
            @Html.ActionLink("Create New", "Create")
            <p>
                Price: @Html.TextBox("price")
                Serial Number :  @Html.TextBox("serial")
                <input type="submit" value="Search" />
            </p>
        }
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GeneralCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailsCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrentyPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th></th>
        </tr>

       @foreach(var item in Model)
        {
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => item.DetaisCategory.SubCategory.Category.GeneralCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetaisCategory.SubCategory.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetaisCategory.SubCategory.subCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetaisCategory.detailsCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WarrentyPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serial)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>
</div>
