@model Asset_Tracking_System.Models.ViewModel.AssetEntryCreateVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



<div class="container">
    <div class="form_my_style">
        <div class="alert alert-success" id="success-alert">
            @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
        </div>
    </div>
    @using (Html.BeginForm("Create", "AssetEntry", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        
         <h2>Asset Purshase Entry</h2>
         <div class="form-group">
            <label for="country" class="col-sm-4 control-label">General Category</label>
            <div class="col-sm-8">
                @Html.DropDownList("GeneralCategoryId", new SelectList(Model.GeneralCategories, "Value", "Text"), new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">Category</label>
            <div class="col-sm-8">
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Value", "Text"), new { id = "categoryId", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">Sub Category</label>
            <div class="col-sm-8">
                @Html.DropDownListFor(m => m.SubCategoryId, new SelectList(Model.SubCategories, "Value", "Text"), new { id = "subcategoryId", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">Details Category</label>
            <div class="col-sm-8">
                @Html.DropDownListFor(m => m.DetailsCategoryId, new SelectList(Model.DetailsCategories, "Value", "Text"), new { id = "detailscategoryId", @class = "form-control" })
            </div>
        </div>
                        
        <div class="form-group">
                @Html.LabelFor(m => m.PurchaseDate, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.PurchaseDate, new {  @class = "date-picker", autofocus = true })
                    @Html.ValidationMessageFor(m => m.PurchaseDate, null, new { @class = "text-danger" })
                </div>
            </div>
        
         <div class="form-group">
                @Html.LabelFor(m => m.Vendor, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Vendor, new {  @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Vendor, null, new { @class = "text-danger" })
                </div>
            </div>
        
         <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Price, new {  @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
                @Html.LabelFor(m => m.WarrentyPeriod, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.WarrentyPeriod, new {  @class = "form-control", autofocus = true })
                </div>
            </div>
        
         <div class="form-group">
                @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.EditorFor(m => m.Quantity, new {  @class = "form-control", autofocus = true })               
                </div>
            </div>
        <div class="form-group">
                @Html.LabelFor(m => m.Serial, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Serial, new {  @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Serial, null, new { @class = "text-danger" })
                </div>
            </div>
        
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
        </div>
            @Html.ActionLink("Back to List", "Index")
    }
</div>
@section scripts{    
  <script src="~/Scripts/AssetEntry.js"></script>
    }