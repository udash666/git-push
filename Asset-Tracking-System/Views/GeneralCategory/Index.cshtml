@model IEnumerable<AssetTrackingSystem.Models.Models.GeneralCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    <hr/>
    <h4>General Category</h4>
    <hr />
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "GeneralCategory", FormMethod.Post))
    {
    <div>
        Name: @Html.TextBox("name")
        Code :  @Html.TextBox("code")
        <input type="submit" value="Search" />
    </div>

    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelTtem => item.Code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>



