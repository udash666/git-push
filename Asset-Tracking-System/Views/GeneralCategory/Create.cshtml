@model AssetTrackingSystem.Models.Models.ViewModel.GeneralCategoryCreateVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="Container">
    
    <div  class="From-Group">
     @using (Html.BeginForm("Create", "GeneralCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
       
         <h2>General Category Setup</h2>
         <p>
          @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
            </p>
         @Html.HiddenFor(m=>m.Id)
          <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Name, new {  @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                </div>
            </div>
         <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.Code, new {  @class = "form-control", autofocus = true })
                    @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
             @Html.ActionLink("Back to List", "Index")
    }
    
</div>
</div>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
