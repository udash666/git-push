@using AssetTrackingSystem.Models.Models
@model AssetTrackingSystem.Models.Models.SubCategory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="Container">
    @using (Html.BeginForm("Edit", "SubCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>Sub Category Edit</h2>
        @Html.HiddenFor(m=>m.Id)
        @Html.HiddenFor(m=>m.GeneralCategoryId)
        
        @Html.HiddenFor(m=>m.CategoryId)
        <div class="form-group">
            @Html.LabelFor(m => m.subCategory, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.subCategory, new { @class = "form-control", autofocus = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Code, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autofocus = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", autofocus = true })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
        </div>
    }
    <div class="form_my_style">
        <div class="alert alert-success">
            @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }

        </div>
    </div>
</div>