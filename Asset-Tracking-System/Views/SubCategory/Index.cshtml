@using AssetTrackingSystem.Models.Models
@model  IEnumerable<AssetTrackingSystem.Models.Models.SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="table">
    <div>
        <hr />
        <h4>Sub Category</h4>
        <hr />
        @Html.ActionLink("Create New", "Create")

        @using (Html.BeginForm("Index", "SubCategory", FormMethod.Post))
        {
            <p>
                Name: @Html.TextBox("subcategory")
                Code :  @Html.TextBox("Code")
                <input type="submit" value="Search" />
            </p>
        }
    </div>

    <table class="table">
        <tr>
            <th>
               @Html.DisplayNameFor(model=> model.GeneralCategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Category.GeneralCategory.Name)
                 </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>
</div>