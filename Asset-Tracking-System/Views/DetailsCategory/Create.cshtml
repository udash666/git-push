@using AssetTrackingSystem.Models.Models
@model Asset_Tracking_System.Models.ViewModel.DetailsCategoryCreateVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="container">
    
    @using (Html.BeginForm("Create", "DetailsCategory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h2>Details Category Setup</h2>
        <p>
          @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
            </p>
       @Html.HiddenFor(m=>m.Id)
        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">General Category</label>
            <div class="col-sm-8">
                @Html.DropDownList("GeneralCategoryId", new SelectList(Model.GeneralCategories, "Value", "Text"), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">Category</label>
            <div class="col-sm-8">
                @Html.DropDownListFor(m =>m.CategoryId, new SelectList(Model.Categories, "Value", "Text"), new { id= "categoryId", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="country" class="col-sm-4 control-label">Sub Category</label>
            <div class="col-sm-8">
                @Html.DropDownListFor(m => m.SubCategoryId, new SelectList(Model.SubCategories, "Value", "Text"), new { id ="subcategoryId", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SubCategoryId)
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(m => m.detailsCategory, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.detailsCategory, new { @class = "form-control", autofocus = true })
                @Html.ValidationMessageFor(m => m.detailsCategory, null, new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Code, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autofocus = true })
                @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", autofocus = true })
              
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-4">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
        </div>
            @Html.ActionLink("Back to List", "Index")
    }

</div>
@section scripts{
<script src="~/Scripts/DetailsCategory.js"></script>
}