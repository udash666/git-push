@model AssetTrackingSystem.Models.Models.ViewModel.CategoryCreateVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div id="container">
    <div>
@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
    <h2>Category Setup</h2>
    <p>
          @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
            </p>
   <div class="form-group">
      @Html.HiddenFor(m=>m.Id)
        <label for="country" class="col-sm-4 control-label">GeneralCategory</label>
        <div class="col-sm-8">
          @Html.DropDownListFor(m => m.GeneralCategoryId, new SelectList(Model.GeneralCategories, "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GeneralCategoryId, null, new { @class = "text-danger" })
        </div>
      </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name", @class = "form-control", autofocus = true })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Code, new { @placeholder = "Code", @class = "form-control", autofocus = true })
            @Html.ValidationMessageFor(m => m.Code, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Description, new {  @class = "form-control", autofocus = true })
      
        </div>
    </div>
      <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
        @Html.ActionLink("Back to List", "Index")
       }
    </div>   
</div>
