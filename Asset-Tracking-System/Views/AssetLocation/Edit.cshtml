@using AssetTrackingSystem.Models.Models
@model AssetTrackingSystem.Models.Models.AssetLocation
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="Container">
    @using (Html.BeginForm("Edit", "AssetLocation", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
         {
    <h2>Asset Location Edit</h2>
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.OrganizationId)
    @Html.HiddenFor(m=>m.BranchId)    
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", autofocus = true })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ShortName, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ShortName, new {@class = "form-control", autofocus = true })
            @Html.ValidationMessageFor(m => m.ShortName, null, new { @class = "text-danger" })
        </div>
    </div>  
         <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </div>   
         @Html.ActionLink("Back To List","Index")
    }
    <div class="form_my_style">
        <div class="alert alert-success">
            @if (ViewBag.Message != null)
            {
                <strong>@ViewBag.Message</strong>
            }
           
        </div>
    </div>
</div>

